{
  "compilerOptions": {
    "target": "ES2019",
    "downlevelIteration": true,
    "module": "esnext",
    "jsx": "react",
    "jsxFactory": "h",
    "strict": true,
    "moduleResolution": "node",
    "composite": true,
    "declarationMap": true,
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext", "DOM"]
  },
  "include": ["**/*.ts", "vite-env.d.ts"],
  "exclude": ["quantize.worker.ts"]
}
